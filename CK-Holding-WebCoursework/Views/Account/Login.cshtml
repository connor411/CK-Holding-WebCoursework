@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{ Layout = "~/Views/Shared/_LayoutAuthorisation.cshtml"; }

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div asp-validation-summary="All" class="message"></div>
                <div class="col-md-10">
                    <input asp-for="Email" placeholder="Email" />
                </div>
                <div class="col-md-10">
                    <input asp-for="Password" placeholder="Password" />
                </div>
                <div class="checkbox">
                    <label asp-for="RememberMe" class="message">
                        <input asp-for="RememberMe" />
                        Remember Me
                    </label>
                </div>
                <br />
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">LOGIN</button>
                </div>
                <p class="message">
                    Not registered?
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Create an account</a>
                </p>
                <p class="message">
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </p>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
